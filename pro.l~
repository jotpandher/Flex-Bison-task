digits			[0-9]+	
float			{digits}*"."{digits}	
text			[a-zA-Z]+
nodes			[\t]*[=]+{digits}
beamx			{text}+[=]+[[]+{digits}+
beamy			[\n]*[,]+{digits}+[]]

%%

[ \n]
x+{nodes}+	{ yylval.xnodes = strdup(yytext);
			return xnodes; }
y+{nodes}+	{yylval.ynodes = strdup(yytext);
			return ynodes; }
z+{nodes}+	{yylval.znodes = strdup(yytext);
			return znodes; }
{beamx}+	{yylval.beamx = strdup(yytext);
			return beamx; }
{beamy}+	{yylval.beamy = strdup(yytext);
			return beamy; }
.							;

